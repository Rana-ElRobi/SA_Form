<p>
  <strong>Name:</strong>
  <%= @project.name %>
</p>
<% unless @project.users.blank? %>
<p>
<strong>Subscribers:</strong>
  <ul>
    <% @project.users.each do |u| %>
    <li><%= u.name %></li>
    <% end %>
  </ul>
</p>
<% end %>
<hr>
<% if @project.check_availability %>
<p>
  <form action="/projects/<%= @project.id %>/subscribe" method="get">
    <label for="">Name:</label><br>
    <select name="name" id="">
      <% @users.each do |u| %>
        <% unless u.project == @project %>
        <option value="<%= u.name %>"><%= u.name %></option>
        <% end %>
      <% end %>
    </select>
    <br><br>
    <label for="">Password:</label><br>
    <input name="pwd" type="password">
    <br><br>
    <input type="Submit" value="Subscribe">
  </form>
</p>
<% end %>
<%= link_to 'Back', projects_path %>